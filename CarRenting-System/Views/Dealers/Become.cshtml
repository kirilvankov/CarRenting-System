@model BecomeDealerFormModel

<div class="col-sm-12 offset-md-2 col-md-8 offset-lg-2 col-lg-8 offset-xl-2 col-xl-9">
    <h2>Become Dealer</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" placeholder="Full name...">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number...">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Become" />
    </form>
</div>