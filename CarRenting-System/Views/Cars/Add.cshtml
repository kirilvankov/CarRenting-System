@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}



<div class="col-sm-12 offset-md-2 col-md-8 offset-lg-2 col-lg-8 offset-xl-2 col-xl-9">
    <h2>Add Car</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Make"></label>
            <input asp-for="Make" class="form-control" placeholder="Enter make...">
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" placeholder="Enter model...">
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group" row="4">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="The car is..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" placeholder="Enter year...">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Image...">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <input class="btn btn-primary" type="submit" value="Add" />
    </form>
</div>

@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}

