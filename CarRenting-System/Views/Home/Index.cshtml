@model List<CarListingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstCar = Model.Any() ? Model[0] : null;
    var secondCar = Model.Count > 1 ? Model[1] : null;
    var thirdCar = Model.Count > 2 ? Model[2] : null;
}
@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are not cars in the system available now, so why don't you register one.</p>
        <hr class="my-4">
        <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@firstCar.ImageUrl" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@firstCar.Make @firstCar.Model </h5>
                <p>@firstCar.Year</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@secondCar.ImageUrl" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@secondCar.Make @secondCar.Model </h5>
                <p>@secondCar.Year</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@thirdCar.Make @thirdCar.Model </h5>
                <p>@thirdCar.Year</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
