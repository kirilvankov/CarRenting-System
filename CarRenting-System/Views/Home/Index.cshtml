@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count() > 1 ? cars[1] : null;
    var thirdCar = cars.Count() > 2 ? cars[2] : null;
}
@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are not cars in the system available now, so why don't you register one.</p>
        <hr class="my-4">
        <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
    </div>
}
<div class="mb-4"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Make @firstCar.Model ">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id">@firstCar.Make @firstCar.Model</a></h5>
                    <p>@firstCar.Year</p>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Make @secondCar.Model ">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Make @secondCar.Model</a></h5>
                    <p>@secondCar.Year</p>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Make @thirdCar.Model ">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id">@thirdCar.Make @thirdCar.Model</a></h5>
                    <p>@thirdCar.Year</p>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="mb-5"></div>
<div class="jumbotron jumbotron-fluid">
    <div class="row">
        <div class="col-md-4 text-center">
            <h2>@Model.TotalCars Cars</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2>@Model.TotalUsers Users</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2>@Model.TotalRents Rents</h2>
        </div>
    </div>
</div>

